{
  "name": "calcite-web",
  "version": "1.0.0-rc.0",
  "description": "SASS & CSS Framework for Esri websites",
  "private": true,
  "homepage": "https://github.com/esri/calcite-web",
  "scripts": {
    "test": "semistandard",
    "prestart": "npm-run-series acetate sass rollup img font js",
    "start": "parallelshell 'rerun-script' 'live-server docs/build --port=8888 --no-browser'",
    "deploy": "gh-pages -d docs/build -o upstream",
    "dist": "npm-run-series stat sass:dist font:dist img:dist rollup js:dist",
    "release": "npm-run-series dist minify s3 releaseScript",
    "prestat": "mkdirp dist/css/",
    "stat": "node-sass lib/sass/calcite-web.scss | cssstats > dist/css/stats.json",
    "preacetate": "npm run stat",
    "acetate": "acetate build --input source --config docs/acetate.config.js",
    "preimg": "mkdirp docs/build/assets/img/",
    "img": "ncp docs/source/assets/img/ docs/build/assets/img/ && ncp lib/img/ docs/build/assets/img/",
    "preimg:dist": "mkdirp dist/img",
    "img:dist": "ncp lib/img dist/img",
    "rollup": "rollup -c lib/js/rollup.config.js && rollup -c lib/js/rollup-marketing.config.js",
    "js": "ncp docs/source/assets/js/ docs/build/assets/js/",
    "js:dist": "ncp docs/build/assets/js/libs/ dist/js/",
    "presass:dist": "mkdirp dist/css/",
    "sass:dist": "node-sass lib/sass/ -q -o dist/css/",
    "postsass:dist": "ncp lib/sass dist/sass",
    "presass": "mkdirp docs/build/assets/css/",
    "sass": "node-sass docs/source/assets/css/ -q -o docs/build/assets/css/ --include-path lib/sass",
    "prefont": "mkdirp docs/build/assets/fonts",
    "font": "ncp lib/fonts docs/build/assets/fonts",
    "prefont:dist": "mkdirp dist/fonts",
    "font:dist": "ncp lib/fonts dist/fonts",
    "icons": "svgo -f lib/img/icons/ui/",
    "minify": "minify dist/css/ && minify dist/js/",
    "s3": "node bin/s3.js",
    "gh-release": "gh-release",
    "releaseScript": "./bin/release.sh"
  },
  "watches": {
    "js": "docs/source/assets/js/**/*",
    "rollup": "lib/js/**/*.js",
    "img": [
      "lib/img/**/*",
      "docs/source/assets/img/**/*"
    ],
    "sass": [
      "lib/sass/**/*",
      "docs/source/assets/css/**/*"
    ],
    "acetate": "docs/source/**"
  },
  "semistandard": {
    "ignore": [
      "bin/",
      "docs/"
    ]
  },
  "main": "dist/js/calcite-web.js",
  "js-next:main": "dist/js/source/calcite-web.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/esri/calcite-web.git"
  },
  "author": {
    "name": "Esri Portland R&D Center",
    "email": "<portland@esri.com>",
    "url": "http://pdx.esri.com/"
  },
  "contributors": [
    {
      "name": "Paul C. Pederson",
      "email": "ppederson@esri.com"
    },
    {
      "name": "Nikolas Wise",
      "email": "nwise@esri.com"
    }
  ],
  "files": [
    "dist/"
  ],
  "license": "Apache 2.0",
  "bugs": {
    "url": "https://github.com/esri/calcite-web/issues"
  },
  "devDependencies": {
    "acetate": "^1.1.1",
    "acetate-cli": "^1.0.1",
    "babel-preset-es2015-rollup": "^1.2.0",
    "babel-plugin-transform-regenerator": "6.16.1",
    "cssstats-cli": "^1.0.0-beta.2",
    "gh-pages": "^0.11.0",
    "gh-release": "^2.0.1",
    "glob": "^7.0.5",
    "live-server": "^1.0.0",
    "minifier": "^0.8.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.8.0",
    "npm-run-series": "^1.0.0",
    "parallelshell": "^2.0.0",
    "request": "^2.73.0",
    "rerun-script": "^0.6.0",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "s3": "^4.4.0",
    "semistandard": "*"
  },
  "dependencies": {
    "clipboard": "^1.5.12",
    "guid": "0.0.12",
    "tiny-emitter": "^1.0.2"
  }
}
