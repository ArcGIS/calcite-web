// │ Icon Font │
// └───────────┘
//  ↳ http://esri.github.io/calcite-web/icons/
//  ↳ icons → _icon-font.md

// ┌───────────┐
// │ Generated │
// └───────────┘
//  ↳ /bin/webfonts-template.hbs
//  ↳ content unicode values are generated and should not be used elsewhere

@mixin icon-font-styles() {
  font-family: '{{fontName}}';
  padding-right: $baseline/3;
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

%icon-font-styles {
  @include icon-font-styles();
}

// when placing an icon after text
%icon-font-after {
  @extend %icon-font-styles;
  padding-right: 0;
  padding-left: $baseline/3;
}

%icon-font-flush {
  padding-right: 0 !important;
  padding-left:  0 !important;
}

@mixin icon-font () {

  @font-face {
    font-family: '{{fontName}}';
    src: {{{src}}};
    font-weight: normal;
    font-style: normal;
  }


  @font-face {
    font-family: "{{fontName}}";
    src: {{{src}}};
  }

  [class^="esri-icon-"]:before,
  [class*=" esri-icon-"]:before,
  [class^="icon-ui-"]:before,
  [class*=" icon-ui-"]:before {
    @include icon-font-styles();
  }

  .esri-icon-small:before, .icon-ui-small:before   { @include font-size(-4);}

  .esri-icon-green:before, .icon-ui-green:before   { color: $green;}
  .esri-icon-blue:before, .icon-ui-blue:before     { color: $blue;}
  .esri-icon-purple:before, .icon-ui-purple:before { color: $purple;}
  .esri-icon-orange:before, .icon-ui-orange:before { color: $orange;}
  .esri-icon-gray:before, .icon-ui-gray:before     { color: $gray;}
  .esri-icon-red:before, .icon-ui-red:before       { color: $red;}

  {{#each codepoints}}
    .icon-ui-{{@key}}:before,
    .esri-icon-{{@key}}:before, {
      content: "\\{{this}}";
    }
  {{/each}}

  .icon-ui-flush:before, .icon-esri-flush:before,
  .icon-ui-flush:after, .icon-esri-flush:after     { @extend %icon-font-flush;}
}

@if $include-icon-font == true {
  @include icon-font();
}